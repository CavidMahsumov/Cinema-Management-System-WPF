<UserControl x:Class="Cinema_Management_System.View.RegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cinema_Management_System.View"
             mc:Ignorable="d" 
             d:DesignHeight="194" d:DesignWidth="227">

    <Grid x:Name="Grid1" Background="#2e2b30" Grid.Row="1" Grid.Column="1">
        <StackPanel>
            <TextBlock FontSize="15" Margin="90,0,20,0" Foreground="White" Text="Sign Up"></TextBlock>
            <TextBox Text="Name..." Foreground="Gray" x:Name="NameTxtBox" Margin="0,5,0,0" Width="200" Height="25" ></TextBox>
            <TextBox Text="Surname..." Foreground="Gray" x:Name="SurnameTxtBox" Margin="0,5,0,0" Width="200" Height="25" ></TextBox>
            <TextBox Text="Email..." Foreground="Gray" x:Name="EmailTxtBox" Margin="0,5,0,0" Width="200" Height="25"/>
            <TextBox Text="Password..." Foreground="Gray" x:Name="PasswordTxtBox" Margin="0,5,0,0" Width="200" Height="25"></TextBox>
            <Button Command="{Binding submitButtonCommand}"  Style="{StaticResource InformButton}" x:Name="SubmitBtn" Height="24" Content="Submit" Margin="2,5,0,2" />
        </StackPanel>
    </Grid>
</UserControl>
